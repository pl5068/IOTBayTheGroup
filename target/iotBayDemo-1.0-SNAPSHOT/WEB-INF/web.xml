<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>user_login</servlet-name>
        <servlet-class>com.iotbay.controller.user_login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user_logout</servlet-name>
        <servlet-class>com.iotbay.controller.user_logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user_register</servlet-name>
        <servlet-class>com.iotbay.controller.user_register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>com.iotbay.controller.Cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user_login</servlet-name>
        <url-pattern>/user_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user_logout</servlet-name>
        <url-pattern>/user_logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user_register</servlet-name>
        <url-pattern>/user_register</url-pattern>
        
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
        
    </servlet-mapping>

    <servlet>
        <servlet-name>catalogue_view</servlet-name>
        <servlet-class>com.iotbay.controller.catalogue_view</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalogue_view</servlet-name>
        <url-pattern>/catalogue_view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>catalogue_add</servlet-name>
        <servlet-class>com.iotbay.controller.catalogue_add</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalogue_add</servlet-name>
        <url-pattern>/catalogue_add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>catalogue_delete</servlet-name>
        <servlet-class>com.iotbay.controller.catalogue_delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalogue_delete</servlet-name>
        <url-pattern>/catalogue_delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>catalogue_edit</servlet-name>
        <servlet-class>com.iotbay.controller.catalogue_edit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catalogue_edit</servlet-name>
        <url-pattern>/catalogue_edit</url-pattern>
    </servlet-mapping>

    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/error.html</location>
    </error-page>
</web-app>
